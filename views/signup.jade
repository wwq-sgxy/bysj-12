extends layout

block content
    .panel.panel-primary.col-sm-offset-3(style='width:50%')
      .panel-heading
        h3.panel-title.text-center 欢迎注册奇葩七人系统
      .panel-body(style='align:center')
        form.form-horizontal(method='post', action='#')
          .form-group
            span(aria-hidden='true')
            label.col-sm-4.control-label(for='name') 证件号：
            .col-sm-4
              input#name.form-control(type='text', placeholder='请输入学号或工号')
          .form-group
            span(aria-hidden='true')
            label.col-sm-4.control-label(for='name') 用户名：
            .col-sm-4
              input#name.form-control(type='text', placeholder='请输入用户名')
          .form-group
            span(aria-hidden='true')
            label.col-sm-4.control-label(for='name') 电子邮箱：
            .col-sm-4
              input#name.form-control(type='text', placeholder='请输入电子邮箱')
          .form-group
            span(aria-hidden='true')
            label.col-sm-4.control-label(for='Password') 密码：
            .col-sm-4
              input#Password.form-control(type='password', placeholder='请输入密码')
          .form-group
            span(aria-hidden='true')
            label.col-sm-4.control-label(for='Password') 确认密码：
            .col-sm-4
              input#Password.form-control(type='password', placeholder='请再次输入密码')
          .form-group
            label.col-sm-4.control-label(for='name') 用户类型：
            .col-sm-offset-0.col-sm-4
              label.radio-inline
                input#optionsRadio1(type='radio', name='optionsRadios', value='option1', checked='true')
                | 学生
              label.radio-inline
                input#optionsRadio2(type='radio', name='optionsRadios', value='option2')
                | 教师
          .form-group
            .col-sm-3.col-sm-offset-3
              button.button.button-3d.button-primary.button-rounded.button-xs(type='submit') 注册
            .col-sm-3.col-sm-offset-0
              button.button.button-3d.button-primary.button-rounded.button-xs.align-left(type='submit') 重置